<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainFrameStyle"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/TestResultStyle"
        android:orientation="horizontal" >

        <TextView
            style="@style/TestResultItemTitleStyle"
            android:text="@string/test_item_spi_result_title" />

        <TextView
            android:id="@+id/test_spi_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DDDDDD" >

        <TextView
            android:id="@+id/test_spi_des"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:singleLine="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ui_bottom_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/globle_back_btn_title" />

        <Button
            android:id="@+id/ui_bottom_btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/globle_pause_btn_title" />
    </LinearLayout>

</LinearLayout>