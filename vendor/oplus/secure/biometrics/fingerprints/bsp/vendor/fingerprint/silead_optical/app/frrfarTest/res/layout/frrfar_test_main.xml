<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/layout_margin"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_marginBottom="@dimen/enrolling_items_interval"
        android:layout_marginTop="@dimen/enrolling_items_interval">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/frrfar_test_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/enrolling_items_interval"
                android:gravity="center"
                android:text="@string/frrfar_test_info_wait_test" />

            <ProgressBar
                android:id="@+id/frrfar_test_progress_bar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/enrolling_items_interval" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/enrolling_items_interval"
                android:orientation="vertical" 
                android:background="@drawable/shape_gray_square_bg">

                <TextView
                    android:id="@+id/frrfar_test_result_time_tpl_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/frrfar_test_result_time_auth_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/frrfar_test_result_time_auth_failed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/frrfar_test_result_time_tpl_upd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/frrfar_test_current_image_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/enrolling_items_interval" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/enrolling_items_interval"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frrfar_test_result_fail_times_title" />

                <TextView
                    android:id="@+id/frrfar_test_result_fail_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/enrolling_items_interval" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frrfar_test_result_fail_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/enrolling_items_interval"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frrfar_test_result_fail_title" />

                <TextView
                    android:id="@+id/frrfar_test_result_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/enrolling_items_interval" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/enrolling_items_interval"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/frrfar_test_result_target_title" />

                <TextView
                    android:id="@+id/frrfar_test_result_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/enrolling_items_interval" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/enrolling_items_interval"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/frrfar_test_finish_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/globle_back_btn_title" />

            <Button
                android:id="@+id/frrfar_test_start_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/frrfar_test_start_btn_title" />

            <Button
                android:id="@+id/frrfar_test_report_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/frrfar_test_report_btn_title" />

            <Button
                android:id="@+id/frrfar_test_again_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/frrfar_test_again_btn_title" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>